extends layout

block content
    h2.page-header Register
    p Please register with the form below
    if errors
            each error,i in errors
              div.alert.alert-danger #{error.msg}
    form(method="post",action="/users/register",enctype="multipart/form-data")
        .form-group
            label Name
            input.form-control(name= "name", type="text",placeholder="Enter a name")
        .form-group
            label Email
            input.form-control(name= "email", type="email",placeholder="Enter email")
        .form-group
            label Username
            input.form-control(name= "username", type="text",placeholder="Enter user name")
        .form-group
            label Password
            input.form-control(name= "password", type="password",placeholder="Enter a password")
        .form-group
            label Confirm Password
            input.form-control(name= "password2", type="password",placeholder="Re-enter password")
        .form-group
            label Profile Image
            input.form-control(name= "profileImage", type="file")
        input.btn.btn-primary(type="submit",name="Submit",value="Register")