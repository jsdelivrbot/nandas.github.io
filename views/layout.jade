doctype html
html(lang='en')
  head
    title Jumbotron Template for Bootstrap
    link(href='/stylesheets/bootstrap.css', rel='stylesheet')
    link(href='/stylesheets/style.css', rel='stylesheet')
  body
    nav.navbar.navbar-inverse
      .container
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='#') Monitor Rental
        #navbar.collapse.navbar-collapse
          ul.nav.navbar-nav
            if user
              li(class=(title=='Welcome' ? 'active' :''))
                a(href='/') Home
              li(class=(title == 'About' ? 'active' : ''))
                a(href='/about') About
            if !user
              li(class=(title=='Register' ? 'active' :''))
                a(href='/users/register') Register
              li(class=(title=='Login' ? 'active' :''))
                a(href='/users/login') Login
          ul.nav.navbar-nav.navbar-right
            if user
              li
                a(href='/users/logout') Logout
    .container
     != messages()
     block content
    hr
    footer
     p(class= 'text-center') CODEDOC Â© 2016 Company, Inc.



